alias zshrc='code ~/.zshrc'
alias zshaliases='code ~/.zsh_aliases'
alias ohmyzsh="code ~/.oh-my-zsh"
alias rmd="rm -rf"
alias c="clear"
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

